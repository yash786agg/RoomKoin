<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView_list_birds"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.ui.birds.list.BirdsListActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recylv_birds"
        style="@style/MatchWidthHeight" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:layout_gravity="center"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add"
        style="@style/WrapWidthHeight"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/dimen_20dp"
        android:elevation="@dimen/dimen_16dp"
        android:src="@drawable/ic_vector_add"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="normal"
        app:layout_anchorGravity="bottom|right|end"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
