<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Permission Alert Dialog. -->

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#000000</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#000000</item>
        <!-- Used for the background -->
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="ScrollBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="birdsTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:layout_marginStart">@dimen/dimen_5dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
    </style>

    <style name="TextInputLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/colorEdiTextHint</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textCursorDrawable">@drawable/edittext_cursor</item>
    </style>

    <style name="ErrorTextInputLayout" parent="TextAppearance.Design.Error">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

    <style name="MatchWidthHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapWidthHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchWidthVertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchWidthHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MatchWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Birds Adapter ImageView. -->

    <style name="birdsAdapterImageView">
        <item name="android:layout_width">@dimen/dimen_150dp</item>
        <item name="android:layout_height">@dimen/dimen_150dp</item>
        <item name="android:layout_margin">@dimen/dimen_5dp</item>
    </style>


</resources>
